{
  "name": "makeoo-backend",
  "version": "1.0.0",
  "description": "Makeoo DIY Platform - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:dev": "tsx src/server.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:setup": "prisma db push && prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx src/utils/seed.ts",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:dev": "docker-compose up -d mysql redis && npm run dev",
    "docker:build": "docker build -t makeoo-backend .",
    "logs": "tail -f logs/app.log"
  },
  "keywords": [
    "diy",
    "recipes",
    "eco-friendly",
    "typescript",
    "express",
    "prisma",
    "mysql"
  ],
  "author": "Makeoo Development Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "express": "^4.21.2",
    "cors": "^2.8.5",
    "helmet": "^8.0.0",
    "compression": "^1.7.5",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.7",
    "joi": "^17.13.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.5",
    "redis": "^4.7.0",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "express-async-errors": "^3.1.1",
    "slugify": "^1.6.6",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.7.2",
    "tsx": "^4.19.2",
    "prisma": "^6.1.0",
    "eslint": "^9.18.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "supertest": "^7.0.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
