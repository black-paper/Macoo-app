{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "service": {
      "type": "string"
    },
    "frameworkVersion": {
      "type": "string"
    },
    "provider": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "profile": {
          "type": "string"
        },
        "stage": {
          "type": "string"
        }
      }
    },
    "custom": {
      "type": "object"
    },
    "resources": {
      "type": "object",
      "properties": {
        "Resources": {
          "type": "object",
          "patternProperties": {
            ".*": {
              "type": "object",
              "properties": {
                "Type": {
                  "type": "string"
                },
                "Properties": {
                  "type": "object"
                }
              }
            }
          }
        },
        "Outputs": {
          "type": "object"
        }
      }
    },
    "plugins": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
